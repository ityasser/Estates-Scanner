<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/border_home"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_2sdp"
        android:id="@+id/resp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرجاء اختيار طريقة الدفع"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center_horizontal"/>




        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"

            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/pay_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="الدفع نقداً"
                android:button="@drawable/check_circle"
                android:paddingStart="@dimen/_7sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="#b0b0b0"
                android:checked="true" />

            <RadioButton
                android:id="@+id/payment_wallet"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/check_circle"
                android:paddingStart="@dimen/_7sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="#b0b0b0"
                android:text="الدفع من المحفظة" />

        </RadioGroup>





        <Button
            android:id="@+id/go_to_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bac_yaowll"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/_15sdp"

            android:textColor="@color/white"
            android:text="موافق "
            android:layout_marginStart="@dimen/_35sdp"/>
    </LinearLayout>





</RelativeLayout>