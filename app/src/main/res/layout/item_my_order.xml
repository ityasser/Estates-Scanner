<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:gravity="start"

android:layoutDirection="rtl"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_height="wrap_content"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#fff"
    app:cardPreventCornerOverlap="false"

    app:contentPadding="0dp"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center_vertical"

        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:background="@drawable/border_grd2"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/colorPrimary"
            android:gravity="start"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:text="طلبية 200"
            android:id="@+id/namec"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#d3d3d3"
            android:gravity="start"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="2dp"
            android:textStyle="bold"
            android:text="20/10/2018 "
            android:layout_gravity="center_horizontal"
            android:id="@+id/date"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e3e3e3"
                android:layout_marginTop="@dimen/_5sdp"
            />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="@dimen/_2sdp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/profile"
                    android:id="@+id/img_profile"
                    android:layout_centerVertical="true"

                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#656565"
                    android:gravity="start"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:text="محمد أحمد "
                    android:layout_toEndOf="@+id/img_profile"
                    android:id="@+id/tx_sender_name"
                    android:layout_centerVertical="true"

                    />
                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:text=" يبعد 2 متر "
                    android:layout_centerVertical="true"
                    android:id="@+id/dist"

                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_5sdp"

                    />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="@dimen/_2sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/time"
                android:id="@+id/time"
                android:layout_centerVertical="true"

                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="#656565"
                android:gravity="start"
                android:layout_marginStart="@dimen/_2sdp"
                android:textStyle="bold"
                android:text=" 28 دقيقة "
                android:layout_toEndOf="@+id/time"
                android:id="@+id/tx_time"
                android:layout_centerVertical="true"

                />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/price"
                android:layout_toEndOf="@+id/tx_time"

                android:layout_centerVertical="true"

                android:id="@+id/price"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="#656565"
                android:gravity="start"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/price"

                android:text=" 28 شيكل "
                android:id="@+id/tx_price"
                android:layout_centerVertical="true"

                />
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"

                android:text="تم الإستلام"
                android:layout_centerVertical="true"
                android:id="@+id/tx_state"
                android:background="@drawable/bac_blue_radius_80"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_5sdp"

                />
        </RelativeLayout>




    </LinearLayout>
</android.support.v7.widget.CardView>