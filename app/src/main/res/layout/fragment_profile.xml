<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <RelativeLayout

        android:layout_width="match_parent"
        android:background="@color/backFraem"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        tools:context=".activities.SplashActivity">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="10dp"

            android:layout_gravity="center_vertical|center_horizontal"


            android:gravity="center_horizontal"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffbf02"
                    android:text="@string/prfile"
                    android:layout_gravity="start|center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available"
                    android:textColor="#656565"
                    android:layout_centerVertical="true"
                    android:id="@+id/sdsd"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/switchForActionBar"

                    />
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchForActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
android:layout_alignParentEnd="true"
                    app:theme="@style/Color1SwitchStyle"
                    android:textOff="OFF"
                    android:textOn="ON"
                    app:showText="true"
                    app:switchTextAppearance="@style/BrandedSwitch.text"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#656565"
                android:text="يتم عرض كافة البيانات التابعة للمستخدم مع إمكانية إضافة صورة شخصية وتعديل البيانات المطلوبة"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="start">

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="start"
                    android:padding="2dp"

                    android:id="@+id/lay_logo"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:padding="2dp"
                        app:civ_border_color="#ffbf02"
                        app:civ_border_width="1dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/logo"
                        android:src="@drawable/perf"

                        />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/edit_photo"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/_2sdp"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#b0b0b0"
                    android:gravity="start"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:text="إضافة / تعديل الصورة الشخصية"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tx_edit"/>
            </LinearLayout>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/user"
                android:gravity="center_vertical"
                android:hint="@string/username"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"

                android:textSize="12dp"
                />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:hint="@string/mobile"
                android:inputType="number"
                android:drawableEnd="@drawable/mobile"

                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:textSize="12dp"
                />
            <EditText
                android:id="@+id/id_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:hint="أدخل رقم الهوية"
                android:inputType="number"
                android:drawableEnd="@drawable/id_no"

                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:textSize="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_spinner"
                    android:drawablePadding="5dp"
                    android:paddingEnd="25dp"
                    android:enabled="false"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <Spinner
                    android:id="@+id/section"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:enabled="false"

                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_spinner"
                    android:drawablePadding="5dp"
                    android:paddingEnd="25dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000"
                    android:textSize="11dp" />


            </LinearLayout>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/address"
                android:gravity="center_vertical"
                android:hint="@string/entre_address"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"

                android:textSize="12dp"
                />

            <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
                android:id="@+id/PassUser"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:hint="@string/password"
                app:tint_color="#ffc109"
                android:drawableEnd="@drawable/pass"
                android:inputType="textPassword"
                android:paddingEnd="@dimen/_10sdp"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:paddingStart="@dimen/_10sdp"


                android:textColorHint="#c9c9c9"
                android:textSize="12dp" />

            <RadioGroup
                android:id="@+id/type_car"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <RadioButton
                    android:id="@+id/motor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:button="@drawable/check_motor"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#b0b0b0"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:button="@drawable/check_car"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#b0b0b0"
                    />

                <RadioButton
                    android:id="@+id/truck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:button="@drawable/check_truck"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="#b0b0b0"
                    />

            </RadioGroup>


            <ps.getit.app.Custom.CustomMapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:fastScrollEnabled="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                android:layout_marginTop="@dimen/_10sdp"
                map:uiCompass="true"
                map:zOrderOnTop="true"
                map:uiZoomControls="true"/>
            <Button
                android:id="@+id/go_to_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bac_yaowll"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="start"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="حفـظ التعديلات"
                android:layout_marginStart="20dp"/>












        </LinearLayout>







    </RelativeLayout>
</ScrollView>