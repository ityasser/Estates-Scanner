<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_width="match_parent">

<RelativeLayout

    android:layout_width="match_parent"
    android:background="@color/backFraem"
    android:layout_height="match_parent"

    tools:context=".activities.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="10dp"
        android:id="@+id/lay_head"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffbf02"
            android:text="رقم الطلبية : 121321"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:paddingTop="@dimen/_7sdp"

            android:gravity="center"
            android:paddingBottom="@dimen/_7sdp"
            android:background="@drawable/border_home"

            android:id="@+id/order_id"
            android:textStyle="bold"
            />




    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lay_head"
        android:id="@+id/lay_bputom"
        android:background="@drawable/border_home"

        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#656565"
                android:text="عنوان المرسل"
                android:layout_gravity="start|center_horizontal"

                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="غزة"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:id="@+id/sender_address"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"

            android:background="#d7d4d4"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#656565"
                android:text="عنوان المستلم"
                android:layout_gravity="start|center_horizontal"

                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="دوارة المنارة"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:id="@+id/recipient_address"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="@drawable/border_home"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/lay_bputom"
        android:id="@+id/deti"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffbf02"
            android:text="تفاصيل الطلبية"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/_13sdp"
            android:paddingTop="@dimen/_2sdp"

            android:gravity="start"

            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:id="@+id/details"
            android:text="التفـــاصيل"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="5dp"
            android:textSize="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ps.getit.app.Custom.CustomMapView
        android:id="@+id/mapView"
        android:layout_below="@+id/deti"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:fastScrollEnabled="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/_10sdp"
        map:uiCompass="true"
        map:zOrderOnTop="true"
        map:uiZoomControls="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapView"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >




        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bac_yaowll"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"

            android:textColor="@color/white"
            android:text="تأكيد إستلام الطلبية"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/cancel_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bac_yaowll"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"

            android:textColor="@color/white"
            android:text="رفض الطلبية"
            android:layout_marginStart="20dp"/>

    </LinearLayout>
</RelativeLayout>
</ScrollView>