<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <RelativeLayout

        android:layout_width="match_parent"
        android:background="@color/backFraem"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        tools:context=".activities.SplashActivity">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="10dp"

            android:layout_gravity="center_vertical|center_horizontal"

            android:gravity="center_horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffbf02"
                android:text="نموذج طلب خدمة توصيل"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#656565"
                android:text="الرجاء إدخال منطقة إستلام الطلب منها وإدخال منطقة تسليم الطلب إليها"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/empity_border_radis_8"

                android:padding="@dimen/_3sdp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="-8dp"
                    android:textSize="@dimen/_12sdp"
                    android:text="من مكاني"
                    android:id="@+id/my_location"
                    android:textColor="@color/white"
                    android:background="@drawable/bacbluel"
                    />

                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="8dp"
                    android:textSize="@dimen/_12sdp"
                    android:text="من مكان آخر"
                    android:id="@+id/location_ouher"
                    android:textColor="@color/colorPrimary"
                    android:background="#0000"
                  />
            </LinearLayout>


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/user"
                android:gravity="center_vertical"
                android:hint="@string/username"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"


                android:enabled="false"
                android:textSize="12dp"
                />
            <EditText
                android:id="@+id/mobile"
                android:enabled="false"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:hint="@string/mobile"
                android:inputType="number"
                android:drawableEnd="@drawable/mobile"

                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:textSize="12dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_spinner"
                    android:drawablePadding="5dp"
                    android:paddingEnd="25dp"
                    android:enabled="false"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <Spinner
                    android:id="@+id/section"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:enabled="false"

                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_spinner"
                    android:drawablePadding="5dp"
                    android:paddingEnd="25dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000"
                    android:textSize="11dp" />


            </LinearLayout>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:drawableEnd="@drawable/address"
                android:gravity="center_vertical"
                android:hint="@string/entre_address"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:enabled="false"

                android:textSize="12dp"
                />
            <ps.getit.app.Custom.CustomMapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:fastScrollEnabled="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                android:layout_marginTop="@dimen/_10sdp"
                map:uiCompass="true"
                map:zOrderOnTop="true"
                map:uiZoomControls="true"/>
            <EditText
                android:id="@+id/coupon"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:hint="@string/coupon"
                android:inputType="number"
                android:drawableEnd="@drawable/sale"

                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:textSize="12dp"
                />



            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="5"
android:imeOptions="actionDone"

                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_grd"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="@string/details"
                android:textColor="#000000"
                android:textColorHint="#c9c9c9"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"

                android:textSize="12dp"
                />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <RadioButton
                    android:id="@+id/light"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="طرد خفيف"
                    android:layout_marginEnd="@dimen/_5sdp"                    android:button="@drawable/check_circle"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#656565"
                    android:checked="true"/>


                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/heavy"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:button="@drawable/check_circle"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#656565"
                    android:text="طرد ثقيل" />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/open"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:button="@drawable/check_circle"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="#656565"
                    android:text="شحن" />
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:text="لغاية 10 كيلو"


                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:text="10 - 20 كيلو"



                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#b0b0b0"
                    android:gravity="center_horizontal"
                    android:text="وزن مفتوح"


                    />
            </LinearLayout>

            <Button
                android:id="@+id/go_to_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bac_yaowll"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="start"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
android:textStyle="bold"
                android:textColor="@color/white"
                android:text="أدخل بيانات المرسل إليه"
                android:layout_marginStart="20dp"/>













        </LinearLayout>







    </RelativeLayout>
</ScrollView>