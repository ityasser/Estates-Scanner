<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/tools"

    tools:context="ps.getit.app.activities.TrackingParcelActivity">
    <ps.getit.app.Custom.CustomMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="true"

        map:uiCompass="true"
        map:zOrderOnTop="true"
        android:layout_above="@+id/lay_time2"
        map:uiZoomControls="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/border_grd"
        android:padding="@dimen/_10sdp"
        android:id="@+id/lay_time2"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/lay_time"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="الوقت المتبقي "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="#656565"
                android:textStyle="bold"
                android:id="@+id/time_trimnat"
                android:layout_marginStart="@dimen/_15sdp"
                android:text="12:2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lay_time"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerInside"

                android:id="@+id/telephone"
                android:src="@drawable/telephone"/>

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:scaleType="centerInside"
                android:id="@+id/sms"
                android:src="@drawable/sms"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
