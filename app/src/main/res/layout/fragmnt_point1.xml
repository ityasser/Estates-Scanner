<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layoutDirection="ltr"

    android:scrollbars="none">
    <RelativeLayout

        android:layout_width="match_parent"
        android:background="@color/backFraem"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        tools:context=".activities.SplashActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="10dp"

            android:layout_gravity="center_vertical|center_horizontal"

            android:gravity="center_horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffbf02"
                android:text="Choose the location of the first point"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"

                />













            <points.comparison.app.Custom.CustomMapView
                android:id="@+id/mapView"

                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fastScrollEnabled="true"
                android:background="#ffffff"
                android:layout_marginTop="@dimen/_10sdp"
                map:uiCompass="true"
                map:zOrderOnTop="true"
                map:uiZoomControls="true"/>
            <Button
                android:id="@+id/go_to_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bac_yaowll"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="next"
                android:layout_marginStart="20dp"/>













        </LinearLayout>







    </RelativeLayout>
</ScrollView>