<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/border_home"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:id="@+id/resp"
        android:orientation="horizontal">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="start|center_vertical"
                android:background="@android:color/transparent"
                android:textColor="#0000"
                android:maxLines="1"
              />

            <ps.getit.app.codeinputlib.CodeInput



                app:animate_on_complete="false"

                android:id="@+id/code"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:underline_color="#457ad1"
                app:underline_selected_color="#9e1ace"
                app:code_text_color="#b12eff"
                app:error_color="#77ce9d"
                app:input_type="numeric"
                app:length_of_code="4"
                />
        </RelativeLayout>










    </LinearLayout>





</RelativeLayout>